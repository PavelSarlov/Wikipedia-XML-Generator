@model XmlDtdViewModel

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="inputs-container">
        <div class="doc-input-container">
            <span asp-validation-for="@Model.DTD" class="text-danger"></span>
            <textarea id="input-dtd" class="doc-input" type="text">@if (@Model is not null) { @Model.DTD }</textarea>
        </div>
        <div class="center-container">
            <div class="wiki-input-container">
                <label for="inputWiki">Enter a link to a wikipedia article:</label>
                <input id="inputWiki" class="form-control" type="text" placeholder="https://en.wikipedia.org/wiki/..." asp-for="@Model.WikiPage" />
                <span asp-validation-for="@Model.WikiPage" class="text-danger"></span>
            </div>
            <div class="upload-file-container">
                <label>
                    Enter a valid DTD on the left or<br />
                    <span id="spanLoad" class="input-hover input-span">load from file<input id="inputDtdFile" type="file" asp-for="@Model.FileDTD" oninput="submit()" hidden /></span><br>
                    and click below to generate XML document
                </label>
            </div>
            <div class="buttons-container">
                <button id="btnGenerate" type="submit" name="btnSubmit" value="GenerateAsync" class="btn btn-danger input-hover">GENERATE</button>
                <button id="btnSave" type="submit" name="btnSubmit" value="DownloadAsync" class="btn btn-primary input-hover input-span"><i class="fa fa-download"></i> DOWNLOAD</button>
                <button id="btnBeautify" type="button" class="btn btn-success input-hover input-span">Beautify</button>
            </div>
        </div>
        <div class="doc-input-container">
            <span asp-validation-for="@Model.XML" class="text-danger"></span>
            <textarea id="input-xml" class="doc-input" type="text">@if (@Model is not null) { @Model.XML }</textarea>
        </div>
    </div>

}